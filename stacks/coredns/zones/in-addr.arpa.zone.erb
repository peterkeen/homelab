<%-
nameservers = []
all_host_services do |host, stack, service|
  if service.name == :coredns
    nameservers << host
  end
end
-%>
in-addr-arpa. IN SOA <%= nameservers.first.hostname %>.keen.land. admin.keen.land. (
    <%= Time.now.to_i %> ; serial
    21600 ; refresh after 6 hours
    900 ; retry after 15 minutes
    1800 ; expire after 30 minutes
    30 ; minimum ttl 30 seconds
)
<%- hosts.each do |host| -%>
<%= host.rdns_label %>. 30 IN PTR <%= host.hostname %>.<%= host.region %>.keen.land.
<%- end -%>
