.:53 {
  reload 10s

  prometheus :9153

  log

  header {
    response set ra
  }

  auto {
    directory /root/zones (.*)\.zone$ {1}
    reload 10s
  }

  cache {
    success 99840 86400
    denial 99840 1800
    prefetch 5
    serve_stale
  }

  forward tailnet-a578.ts.net 100.100.100.100

  forward . <%= this_host.local_ip %>:5335

  errors
}
