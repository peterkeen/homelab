proxy_cache_path /cache levels=1:2 keys_zone=sites_cache:64m max_size=10g inactive=2y;

limit_req_zone $binary_remote_addr zone=remoteaddr:10m rate=100r/s;
limit_req zone=remoteaddr burst=100 nodelay;

# backends
map $http_host $proxy_backend {
  hostnames;

  default http://127.0.0.1:8888;

  <%- this_host_web_configs do |_, _, conf| -%>
  <%- if conf[:anubis] -%>
  <%- ([conf[:fqdn]] + conf.fetch(:alternate_hostnames, [])).each do |hostname| -%>
  <%= hostname -%> http://anubis:80;
  <%- end -%>
  <%- end -%>
  <%- end -%>

  unifi.keen.land     https://10.73.95.7:8443;
  sabnzbd.keen.land   http://10.73.95.84:30055;
}

map $http_upgrade $connection_upgrade {
  default upgrade;
  '' close;
}


# redirects
map $http_host $new_host {
  hostnames;

  default "";

  <%- this_host_web_configs do |_, _, conf| -%>
  <%- conf.fetch(:alternate_hostnames, []).each do |hostname| -%>
  <%= hostname %> <%= conf[:fqdn] %>;
  <%- end -%>
  <%- end -%>
}

# http to https redirect
server {
  listen 80 default_server;
  listen [::]:80 default_server;

  access_log /dev/stdout json_combined;
  error_log /dev/stdout info;

  if ($new_host != "") {
    rewrite ^(.*)$ $new_host$request_uri;
  }


  location / {
    return 301 https://$host$request_uri;
  }
}

<%- this_host_certs.each do |certname, hostnames| -%>
# https termination
server {
  listen 443 ssl;
  listen [::]:443 ssl;

  resolver 127.0.0.11;

  server_name <%= hostnames.join(" ") %>;

  access_log /dev/stdout json_combined;
  error_log /dev/stdout info;

  server_tokens off;

  ssl_certificate /etc/letsencrypt/certificates/<%= certname %>.crt;
  ssl_certificate_key /etc/letsencrypt/certificates/<%= certname %>.key;
  ssl_session_timeout 1d;
  ssl_session_cache shared:MozSSL:10m;  # about 40000 sessions
  ssl_session_tickets off;

  # curl https://ssl-config.mozilla.org/ffdhe2048.txt > /path/to/dhparam
  ssl_dhparam /etc/nginx/dhparam;

  # intermediate configuration
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers off;

  # OCSP stapling
  ssl_stapling on;
  ssl_stapling_verify on;

  client_max_body_size 1024M;

  gzip off;

  if ($new_host != "") {
    rewrite ^(.*)$ $new_host$request_uri;
  }

  if ($proxy_backend = "") {
    return 404 "not found";
  }

  location / {
    proxy_http_version 1.1;

    # Enables WS support
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header X-Scheme https;

    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;
    proxy_redirect off;

    proxy_buffering on;

    proxy_ssl_server_name on;
    proxy_ssl_verify off;

    proxy_buffers 4 512k;
    proxy_buffer_size 1024k;
    proxy_busy_buffers_size 1024k;

    proxy_pass $proxy_backend;
  }
}
<%- end -%>

<% this_host_web_configs do |stack, service, conf| %>
server {
  listen 127.0.0.1:8888;
  server_name <%= conf[:fqdn] %>;

  resolver 127.0.0.11;

  gzip off;

  client_max_body_size 1024M;

  <%- conf[:routes].each do |route| -%>
  location <%= route[:path] %> {
    proxy_http_version 1.1;

    # Enables WS support
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    proxy_buffering on;

    proxy_ssl_server_name on;
    proxy_ssl_verify off;

    <%- if route[:cache] -%>
    add_header X-Cache-Status $upstream_cache_status;
    proxy_cache_key $scheme$http_host$proxy_host$request_uri;
    proxy_cache sites_cache;
    proxy_cache_revalidate on;
    proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504 http_403 http_404 http_429;
    proxy_cache_background_update on;
    proxy_cache_lock on;
    <%- end -%>

    proxy_buffers 4 512k;
    proxy_buffer_size 1024k;
    proxy_busy_buffers_size 1024k;

    set $upstream <%= route[:upstream] %>;

    proxy_pass $upstream;
  }
  <%- end -%>
}
<%- end -%>
