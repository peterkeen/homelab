{
  "apps": {
    "http": {
      "servers": {
        "example-stage-1": {
          "listen": [
            ":80"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "www.example.com"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "unix//sockets/anubis.sock"
                    }
                  ],
                  "headers": {
                    "request": {
                      "set": {
                        "X-Real-IP": ["{http.request.remote.host}"],
                        "X-Http-Version": ["1.1"]
                      }
                    }
                  }
                }
              ]
            },
            {
              "match": [
                {
                  "host": [
                    "www.example.org"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "unix//sockets/anubis.sock"
                    }
                  ],
                  "headers": {
                    "request": {
                      "add": {
                        "X-Real-IP": ["{http.request.remote.host}"],
                        "X-Http-Version": ["{http.request.proto}"]
                      }
                    }
                  }
                }
              ]
            }
          ]
        },
        "example-stage-2": {
          "listen": [
            "unix//sockets/caddy.sock"
          ],
          "automatic_https": {
            "disable": true
          },
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "www.example.com"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "Hello reload3!"
                }
              ]
            },
            {
              "match": [
                {
                  "host": [
                    "www.example.org"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "Hello org!"
                }
              ]
            }
          ]
        }
      }
    }
  }
}
