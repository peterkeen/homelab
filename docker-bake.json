{
  "group": {
    "default": {
      "targets": [
        "cron-hook",
        "adsb-bubble",
        "ezshare-go"
      ]
    }
  },

  "target": {
    "cron-hook": {
      "dockerfile": "Dockerfile",
      "context": "./stacks/common",
      "tags": [
        "ghcr.io/keenfamily-us/infra/stacks/cron-hook:latest"
      ],
      "platforms": [
        "linux/arm64/v8",
        "linux/amd64"
      ]
    },
    "adsb-bubble": {
      "dockerfile": "Dockerfile",
      "context": "./stacks/adsb-bubble",
      "tags": [
        "ghcr.io/keenfamily-us/infra/stacks/adsb-bubble:latest"
      ],
      "platforms": [
        "linux/amd64"
      ]
    },
    "ezshare-go": {
      "dockerfile": "Dockerfile",
      "context": "./stacks/ezshare-go",
      "tags": [
        "ghcr.io/keenfamily-us/infra/stacks/ezshare-go:latest"
      ],
      "platforms": [
        "linux/amd64"
      ]
    }    
  }
}
